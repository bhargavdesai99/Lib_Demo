<h1>Listing books</h1>

<table>
  <tr>
    <th>Book name</th>
    <th>User</th>
    <th>Return date</th>
    <th>Purchase date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.book_name %></td>
    <td><%= book.user_id %></td>
    <td><%= book.return_date %></td>
    <td><%= book.purchase_date %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

